@model ECommerceApp.Models.LoginModel

@{
    ViewBag.Title = "Connexion";
}

<hgroup class="title">
    <h4>@ViewBag.Title</h4>
</hgroup>

<section id="loginForm">

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Formulaire de connexion</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.Label("CaptchaAnswer", Model.CaptchaQuestion)
                @Html.TextBoxFor(m => m.CaptchaAnswer)
                @Html.ValidationMessageFor(m => m.CaptchaAnswer)
                @Html.HiddenFor(m => m.GoodAnswer)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <input type="submit" value="Se connecter" />
    </fieldset>
    <p>
        @Html.ActionLink("Enregistrez-vous", "Register") si vous n'avez pas encore de compte.
    </p>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
