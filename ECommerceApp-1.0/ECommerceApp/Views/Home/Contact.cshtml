    <h2>@ViewBag.Message</h2>
</hgroup>

<section class="contact">
    <header>
        <h3>Téléphone</h3>
    </header>
    <p>
        <span class="label">Standard :</span>
        <span>01.02.03.04.05</span>
    </p>
    <p>
        <span class="label">Service client :</span>
        <span>01.02.03.04.05</span>
    </p>
</section>

<section class="contact">
